<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.babymusicplayer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BabySongsActivity"
            android:label="Baby Shark"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".ClassicalActivity"
            android:label="Little Snowflake"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".AnimActivity"
            android:label="Twinkle Twinkle Little Star"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".PopActivity"
            android:label="ABC Song"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".OldiesActivity"
            android:label="Do you like asparagus cake?"
            android:configChanges="orientation|keyboardHidden"></activity>
    </application>

</manifest>